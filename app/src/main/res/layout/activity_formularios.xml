<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formularios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context="general.me.edu.dgtmovil.dgtmovil.FormulariosActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/cen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_cgt" />

        <TextView
            android:id="@+id/txt_territorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="0.15"
            android:text="DIRECCION DE GESTION TERRITORIAL"
            android:textAlignment="center"
            android:textSize="21dp"
            android:gravity="center"/>

        <ListView
            android:id="@+id/lst_formularios"
            android:layout_width="match_parent"
            android:layout_height="536dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
